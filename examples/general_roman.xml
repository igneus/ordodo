<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE ordodo SYSTEM "../xml/ordodo.dtd">

<ordodo locale="en">
  <meta>
    <title>General Roman Calendar</title>
    <description>
      The easiest case: generating an ordo for a single calendar.
    </description>
  </meta>

  <temporale>
    <!--
        Transfer of Epiphany, Ascension and Corpus Christi
        is optional.
    -->
    <option type="transfer_to_sunday" feast="Epiphany" apply="optional" />
    <option type="transfer_to_sunday" feast="Ascension" apply="optional" />
    <option type="transfer_to_sunday" feast="Corpus Christi" apply="optional" />
  </temporale>

  <!--
      Structure of sanctorale data.
  -->
  <calendar title="General Roman Calendar">
    <artefact type="packaged" ref="universal-en" />
  </calendar>
</ordodo>
